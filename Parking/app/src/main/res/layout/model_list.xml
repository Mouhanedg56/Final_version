<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_margin="12dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="12dp"
    android:layout_height="180dp"
    android:background="@drawable/bg_normal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"

            android:paddingLeft="15dp"
            android:paddingTop="10dp"

            android:text="Nom"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="20dp"
            android:textStyle="bold"

            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:textAppearance="?android:attr/textAppearanceLarge"-->
                    <!--android:text="Capacité"-->
                    <!--android:id="@+id/capa"-->
                    <!--android:padding="10dp"-->
                    <!--android:layout_alignParentLeft="true"-->
                    <!--/>-->
                    <ImageView
                        android:id="@+id/capa"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"

                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="20dp"


                         />

                    <TextView
                        android:id="@+id/capacity1"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_weight="2"
                        android:padding="10dp"
                        android:text="Capacité :"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="18dp" />
                    <TextView
                        android:id="@+id/capacity"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_weight="2"
                        android:padding="10dp"
                        android:text="100"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="18dp" />

                    />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:textAppearance="?android:attr/textAppearanceLarge"-->
                    <!--android:text="Type"-->
                    <!--android:id="@+id/type"-->
                    <!--android:padding="10dp"-->
                    <!--android:layout_alignParentLeft="true"-->
                    <!--/>-->
                    <ImageView
                        android:id="@+id/distance"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"

                        android:paddingBottom="5dp"
                        android:paddingLeft="20dp"
                        android:paddingTop="5dp"
                         />

                    <LinearLayout
                        android:layout_width="173dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/disTxt1"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_weight="2"
                            android:padding="10dp"
                            android:text="Distance :"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textSize="18dp"></TextView>

                        <TextView
                            android:id="@+id/disTxt"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_weight="5"
                            android:text="3000"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textSize="18dp"></TextView>

                        <TextView
                            android:id="@+id/disTxt2"
                            android:layout_width="25dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="m"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textSize="18dp"></TextView>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:textAppearance="?android:attr/textAppearanceLarge"-->
                    <!--android:text="Frais"-->
                    <!--android:id="@+id/frais"-->
                    <!--android:padding="10dp"-->
                    <!--android:layout_alignParentLeft="true"-->
                    <!--/>-->
                    <ImageView
                        android:id="@+id/frais"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"

                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="20dp"
                         />


                    <TextView
                        android:id="@+id/fraisTxt1"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"

                        android:padding="10dp"
                        android:text="Frais :"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="18dp"></TextView>
                    <TextView
                        android:id="@+id/fraisTxt"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_weight="2"
                        android:padding="10dp"
                        android:text="gratuit"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="18dp"></TextView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1">

                <TextView
                    android:id="@+id/probatext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="65dp"
                    android:lines="1"

                    android:text="Probabilité"
                    android:textSize="18dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="0.37"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/proba"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:lines="1"

                        android:text="80"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#FFA228"
                        android:textSize="30dp" />

                    <TextView
                        android:id="@+id/end"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:lines="1"
                        android:padding="0dp"
                        android:text="%"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#FFA228"
                        android:textSize="30dp" />

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>